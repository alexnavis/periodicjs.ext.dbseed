<% include ../../../../periodicjs.ext.admin/views/shared/header %>
<% include ../../../../periodicjs.ext.admin/views/shared/nav %>
	<input type="hidden" name="_csrf" value=<%= locals.token %> >
	<div class="_pea-container">
		<div class="_pea-row">
			<div class="_pea-col-span7">
				<h2>Test Email</h2>
				<form class="_pea-form _pea-ajax-form" method="post" action="/p-admin/mailer/testmail">
					<div class="_pea-document">
						<div class="_pea-row">
							<div class="_pea-row _pea-container-forminput">
								<label class="_pea-col-span1 _pea-label _pea-text-right">from</label>
								<input class="_pea-col-span11 noFormSubmit" type="text" placeholder="from" value="local@local.getperiodic.com" name="from"/>
							</div>
							<div class="_pea-row _pea-container-forminput">
								<label class="_pea-col-span1 _pea-label _pea-text-right">to</label>
								<input class="_pea-col-span11 noFormSubmit" type="text" placeholder="subject" value="<%- user.email %>" name="to"/>
							</div>
							<div class="_pea-row _pea-container-forminput">
								<label class="_pea-col-span1 _pea-label _pea-text-right">cc</label>
								<input class="_pea-col-span11 noFormSubmit" type="text" placeholder="subject" value="<%- user.email %>" name="cc"/>
							</div>
							<div class="_pea-row _pea-container-forminput">
								<label class="_pea-col-span1 _pea-label _pea-text-right">bcc</label>
								<input class="_pea-col-span11 noFormSubmit" type="text" placeholder="subject" value="" name="bcc"/>
							</div>
							<div class="_pea-row _pea-container-forminput">
								<label class="_pea-col-span1 _pea-label _pea-text-right">replyTo</label>
								<input class="_pea-col-span11 noFormSubmit" type="text" placeholder="subject" value="<%- user.email %>" name="replyTo"/>
							</div>
							<div class="_pea-row _pea-text-center _pea-container-forminput no-margin">
								<input type="submit" class="_pea-color-success _pea-button" value="Send Email" name="send_mail_button"/>
							</div>
						</div>
					</div>
				</form>
			</div>
			<div class="_pea-col-span4 _pea-pull-right">
				<h2>Mail Settings</h2>
				<form class="_pea-form _pea-ajax-form" method="post" action="/p-admin/mailer/updatesettings">
					<div class="_pea-document">
						<div class="_pea-row _pea-container-forminput">
						<% var docstatus = [{
								"value":"publish",
								"label":"Status: Publish"
								},{
								"value":"draft",
								"label":"Status: Draft"
								},{
								"value":"review",
								"label":"Status: Review"
								},{
								"value":"trash",
								"label":"Status: Trash"
								}]; %>
							<select name="status" class="_pea-col-span12">
								<% docstatus.forEach(function(status){
									%>
										<option <% if('publish' === status.value ){%> selected="selected"
										<%}%> value="<%= status.value %>"><%= status.label %></option>
									<%
									}); %>
							</select>
						</div>
						<div class="_pea-row _pea-container-forminput">
							<small>Date: Publish Immediately</small>
						</div>
						<div class="_pea-text-center">
							<input type="submit" name="save_button" value="Sendmail" class="_pea-button _pea-color-default"/>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="<%= locals.themehelper.extensionPublicResourcePath('periodicjs.ext.admin','javascripts') %>wysihtml5-advanced.js"></script>
	<script type="text/javascript" src="<%= locals.themehelper.extensionPublicResourcePath('periodicjs.ext.admin','javascripts') %>wysihtml5-0.4.0pre.min.js"></script>
<% include  ../../../../periodicjs.ext.admin/views/shared/footer %>
